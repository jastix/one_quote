<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: 'form' } ) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :reset_password_token, as: :hidden %>

  <fieldset>
    <%= f.input :password, label: "New password", input_html: { value: '' } %>
    <%= f.input :password_confirmation, label: "Confirm new password", input_html: { value: '' } %>
  </fieldset>
  

  <%= f.submit "Change my password", class: 'update_button' %>
<% end %>

<%= render "devise/shared/links" %>
