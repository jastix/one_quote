<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: 'form' } ) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input 'reset_password_token', as: :hidden, value: params[:reset_password_token] %>

  <fieldset>
    <%= f.input :password, "New password" %>
    <%= f.input :password_confirmation, "Confirm new password" %>
  </fieldset>
  

  <%= f.submit "Change my password", class: 'update_button' %>
<% end %>

<%= render "devise/shared/links" %>
